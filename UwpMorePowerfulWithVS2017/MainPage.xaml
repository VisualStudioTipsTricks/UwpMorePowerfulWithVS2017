<Page
    x:Class="UwpMorePowerfulWithVS2017.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpMorePowerfulWithVS2017"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:UwpMorePowerfulWithVS2017.ViewModels"
    xmlns:controls="using:UwpMorePowerful.Controls"
    xmlns:models="using:UwpMorePowerfulWithVS2017.Models"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="color" Color="Green" />
        <SolidColorBrush x:Key="color2" Color="Red" />
        <viewmodels:MainViewModel x:Key="viewmodel" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <controls:ChooseTownControl />
            <TextBox Text="3" x:Name="Number" />
            <TextBlock Text="{x:Bind ViewModel.Version}" />
            <TextBlock Text="{x:Bind ViewModel.GetCurrentDateTime()}" />
            <TextBlock Text="{x:Bind ViewModel.GetTestValue()}" />
            <TextBlock Text="{x:Bind ViewModel.Double(Number.Text),Mode=OneWay}" FontSize="100" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Page>